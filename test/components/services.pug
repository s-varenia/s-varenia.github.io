div(class="mb-10 md:mb-24")
	div(x-data class="flex flex-col gap-5 mx-auto px-4 md:max-w-3xl lg:max-w-5xl xl:max-w-7xl")
		//- заголовок раздела
		div(class="text-center")
			h4(x-text="$t('services.subTitle')" class="inline-block px-1.5 mb-4 bg-brown-400 text-base text-white")
			h2(x-text="$t('services.title')" class="text-3xl md:text-5xl font-bold")
		//- описание сервисов
		each name in [`quality`, `options`, `support`]	
			div(class="flex flex-col gap-5 px-5 py-10 bg-gray-100 md:px-10 sm:flex-row sm:items-center sm:justify-center lg:py-20")
				h3(x-html=`$t('services.${name}.title')` class="text-5xl text-center sm:text-right font-bold first-line:font-light sm:w-1/2 lg:w-4/12 lg:text-6xl")
				p(x-html=`$t('services.${name}.text')` class="text-sm text-justify sm:w-1/2 lg:w-4/12")